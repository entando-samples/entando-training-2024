{
    "microservices": [
        {
            "name": "heroms",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "commands": {
                "run": "./mvnw spring-boot:run -Dspring-boot.run.profiles=dev"
            }
        }
    ],
    "microfrontends": [
        {
            "name": "form-hero-widget",
            "customElement": "form-hero-widget",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "form-hero-widget",
                "it": "form-hero-widget"
            },
            "buildFolder": "dist",
            "apiClaims": [
                {
                    "name": "hero-api",
                    "type": "internal",
                    "serviceName": "heroms"
                }
            ], 
            "contextParams": [
                "page_code",
                "info_currentLang",
                "systemParam_applicationBaseURL"
            ]
        },
        {
            "name": "table-hero-widget",
            "customElement": "table-hero-widget",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "table-hero-widget",
                "it": "table-hero-widget"
            },
            "buildFolder": "dist",
            "apiClaims": [
                {
                    "name": "hero-api",
                    "type": "internal",
                    "serviceName": "heroms"
                }
            ],
            "contextParams": [
                "page_code",
                "info_currentLang",
                "systemParam_applicationBaseURL"
            ]
        }
    ],
    "svc": [
        "postgresql"
    ],
    "name": "heroes",
    "version": "0.0.1",
    "description": "heroes description",
    "type": "bundle"
}