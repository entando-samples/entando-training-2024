{
    "microservices": [
        {
            "name": "heroms",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "commands": {
                "run": "./mvnw spring-boot:run -Dspring-boot.run.profiles=dev"
            },
            "dbms": "postgresql"
        }
    ],
    "microfrontends": [
        {
            "name": "form-hero-widget",
            "customElement": "form-hero-widget",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "form-hero-widget",
                "it": "form-hero-widget"
            },
            "buildFolder": "dist",
            "apiClaims": [
                {
                    "name": "hero-api",
                    "type": "internal",
                    "serviceName": "heroms"
                }
            ],
            "contextParams": [
                "page_code",
                "info_currentLang",
                "systemParam_applicationBaseURL"
            ],
            "configMfe": "simple-mfe-config",
            "params": [
                {
                    "name": "city",
                    "description": "the city of the hero"
                }
            ]
        },
        {
            "name": "table-hero-widget",
            "customElement": "table-hero-widget",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "table-hero-widget",
                "it": "table-hero-widget"
            },
            "buildFolder": "dist",
            "apiClaims": [
                {
                    "name": "hero-api",
                    "type": "internal",
                    "serviceName": "heroms"
                }
            ],
            "contextParams": [
                "page_code",
                "info_currentLang",
                "systemParam_applicationBaseURL"
            ]
        },
        {
            "name": "simple-mfe-config",
            "customElement": "simple-mfe-config",
            "stack": "angular",
            "type": "widget-config",
            "group": "free",
            "publicFolder": "public",
            "buildFolder": "dist"
        },
        {
            "name": "simple-epc",
            "customElement": "simple-epc",
            "stack": "react",
            "type": "app-builder",
            "slot": "content",
            "group": "free",
            "publicFolder": "public",
            "paths": ["/simple-epc"],
            "nav": [
                {
                    "label": {
                    "en": "YOUR EPC LABEL IN ENGLISH",
                    "it": "YOUR EPC LABEL IN ITALIAN"
                    },
                    "target": "internal", 
                    "url": "/simple-epc"
                }
            ]    

        }
    ],
    "svc": [
        "postgresql",
        "keycloak"
    ],
    "name": "heroes",
    "version": "0.0.6",
    "description": "heroes description",
    "type": "bundle"
}